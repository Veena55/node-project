<h1>Codieal / <%= title %></h1>
<section>
    <% if(locals.user) { %>
    <form action="/posts/create-post" method="POST">
        <textarea name="content" rows="3" cols="30"></textarea>
        <input type="submit" value="Create Post">
    </form>
    <!-- All posts list -->
    <% allPosts.forEach(item => { %>
            <div>
            <p><b>Content: </b></ba><%= item.content %></p>
            <p><b>Posted By: </b><%= item.user.name %>
                <% if(locals.user && (locals.user.id == item.user.id)) { %>
                <a href="/posts/destroy/<%= item._id %>">Delete</a></p>
            </div>
            <% } %>

        </div>
        <div>
            <form action="/comments/add-comment" method="POST">
                <input type="text" name="content" placeholder="Type here to comment...">
                <input type="hidden" name="post" value="<%= item._id %>">
                <input type="submit" value="Comment">
            </form>
            </form> 
        </div>
        <div>
            <p><b>Comments:</b></p>
            <% for(comment of item.comments) {  %> 
                <%- include('_comment') -%>
                <% }; %>
        </div>
        <% }); %>
        <% } %>
</section>
